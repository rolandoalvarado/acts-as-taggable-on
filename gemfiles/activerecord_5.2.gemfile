source "https://rubygems.org"

gem "activerecord", "~> 5.2.0"
case ENV["DB"]
when "postgresql"
  gem 'pg'
when "mysql"
  gem 'mysql2', '~> 0.3'
else
  gem "sqlite3", "~> 1.3", "< 1.4"
end
gem 'acts_as_paranoid'

group :local_development do
  gem "guard"
  gem "guard-rspec"
  gem "appraisal"
  gem "rake"
  gem "byebug", platforms: [:mri]
end

gemspec path: "../"
